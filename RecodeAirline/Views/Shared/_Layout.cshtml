<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecodeAirline </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div id="bg">
        <header>
            <nav style="background-color: #593694; padding: 30px" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
                <div class="container-fluid">
                    <a style="color: navajowhite; font-size: 28px;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RecodeAirline</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <span class="col-xl-8"></span>
                            <li class="nav-item">
                                <a style="font-size:17px" class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size:17px" class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Create">Cadastro</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size:17px" class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Promocao">Promoções</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size:17px" class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Destino">Destinos</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size:17px" class="nav-link text-light" asp-area="" asp-controller="Contato" asp-action="Create">Contato</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div>
            <main role="main">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted mt-5">
            <div class="container">
                <div class="row">
                    <div style="background:url(../img/bgcustom.jpg)no-repeat" class="col-2 col-md-2 bg-primary d-none d-sm-none d-md-block">
                        <p style="color: navajowhite; font-size:30px; font-family:Libre Baskerville, serif;">RecodeAirline</p>
                        <img src="../img/logo1.png" />
                    </div>
                    <div class="col-4 col-md-2">
                        <h4>Categorias</h4>
                        <ul class="navbar-nav ">
                            <li><a href=""></a></li>
                            <li><a href="">Passagens</a></li>
                            <li><a href="">Destinos</a></li>
                            <li><a href="">Hospedagem</a></li>
                        </ul>
                    </div>

                    <div class="col-4 col-md-2 ">
                        <h4>Outros assuntos</h4>
                        <ul class="navbar-nav float-sm-right !important">
                            <li><a href="">Trabalhe conosco </a></li>
                            <li><a href="">Parceirias</a></li>
                            <li><a href="">Patrocinadores</a></li>
                            <li><a href="">Inovações</a></li>
                        </ul>
                    </div>

                    <div class="col-4 col-md-2">
                        <h4>Links Úteis</h4>
                        <ul class="navbar-nav">
                            <li><a href="">Pacotes</a></li>
                            <li><a href="">Internacionais</a></li>
                            <li><a href="">Promoções</a></li>
                        </ul>
                    </div>

                    <div class="d-none d-sm-none d-md-inline col-md-4">
                        <ul>
                            <li>
                                <a href=""><img src="../img/facebook.png"></a>
                            </li>

                            <li>
                                <a href=""><img src="../img/twitter.png"></a>
                            </li>

                            <li>
                                <a href=""><img src="../img/instagram.png"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <p>copyright &copy; 2021 - RecodeAirline.</p>
        </footer>

    </div>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>