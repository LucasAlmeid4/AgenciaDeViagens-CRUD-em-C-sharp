@model RecodeAirline.Models.Contato

@{
    ViewData["Title"] = "Create";
}
<div style="margin-top:85px" class="container bg-light rounded">
    <h1>Deseja entrar em contato conosco ?</h1>

    <h4>Preencha os campos abaixo</h4>
    <hr />

    <div class="row">
        <span class="col-md-1"> </span>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mensagem" class="control-label"></label>
                    <textarea asp-for="Mensagem" class="form-control"></textarea>
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary  mt-2" />
                </div>
            </form>
        </div>
        <span class="col-md-1"> </span>
        <div class="col-sm-auto col-md-4 d-none d-sm-none d-md-block d-sm-block">
            <h3 class="float-right">Contato</h3>
            <p class="float-right position-relative d-inline-block ">
                Envie uma mensagem preenchendo os campos ao lado
                <strong>ou</strong>
                ligue no número: (11) 97070-7070.
            </p>
        </div>
    </div>


</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
